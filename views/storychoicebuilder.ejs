<body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  <section id="title">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-6 col-md-12">
          <h1 class="main-heading">Personalize Your Story!</h1>
        
          <form action="{{ url_for('story') }}" method="GET">
            <p>Welcome to your story builder please fill out the fields below. 
            </p>
            <p>Enter your characters name:<input type="text" name="character_name" placeholder="Name" /></p>
            <p>Then enter the storys theme:
              <input type="text" name="story_theme" placeholder="Theme" />
            </p>
            <div class="d-flex justify-content-center">
              <button type="submit" class="btn btn-dark btn-lg">Create a Story</button>
            </div>
          </form>
        </div>
      </div>
      <div class="col-lg-6 col-md-12">
        <!-- <img class="title-image" src="static/images/book.png" alt="st-logo" /> -->
      </div>
    </div>
  </section>

  <footer id="footer">
    <button type="button" class="btn">
      <i class="fa-brands fa-twitter"></i>
    </button>
    <button type="button" class="btn">
      <i class="fa-brands fa-facebook"></i>
    </button>
    <button type="button" class="btn">
      <i class="fa-brands fa-instagram"></i>
    </button>
    <button type="button" class="btn">
      <i class="fa-solid fa-envelope"></i>
    </button>
